#!/usr/bin/env node

require('dotenv').config();

/**
 * Module dependencies.
 */

var app = require('../index'),
    debug = require('debug')('express-app:server'),
    https = require('https'),
    fs = require('fs'),
    winston = require('winston');
    // config = require('../config');

/**
 * Transports (Logging)
 */
var transports = [
  new winston.transports.Console({
    level: 'info',
    timestamp: function() {
      return new Date().toString();
    },
    json: true,
  })
];

/**
 * Logging
 */
global.log = new winston.Logger({
  transports: transports,
});

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */
var sslOptions = {
  key:fs.readFileSync('config/pvt.crt'),
  cert:fs.readFileSync('config/cert.crt'),
  ca:fs.readFileSync('config/ca.crt')
}

global.server = https.createServer(sslOptions,app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, function(){
  log.info(
    '%s v%s ready to accept connections on port listening on port %s',
    process.env.NAME,
    process.env.VERSION,
    port
  );
});

server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
